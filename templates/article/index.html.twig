{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>TagIds</th>
                {#<th>Body</th>#}
{#                <th>ThumbnailSmall</th>#}
{#                <th>ThumbnailBig</th>#}
                <th>Status</th>
                <th>Hits</th>
                <th>CreatedTime</th>
                <th>UpdateTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.tagIds }}</td>
               {# <td>{{ article.body }}</td>#}
{#                <td>{{ article.thumbnailSmall }}</td>#}
{#                <td>{{ article.thumbnailBig }}</td>#}
                <td>{{ article.status }}</td>
                <td>{{ article.hits }}</td>
                <td>{{ article.createdTime|date }}</td>
                <td>{{ article.updateTime|date }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
